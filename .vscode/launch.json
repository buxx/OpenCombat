    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Server (standalone)",
            "cargo": {
                "args": [
                    "build",
                    "--bin=battle_server",
                    "--package=battle_server"
                ],
                "filter": {
                    "name": "battle_server",
                    "kind": "bin"
                }
            },
            "args": [
                "--rep-address",
                "tcp://0.0.0.0:4255",
                "--bind-address",
                "tcp://0.0.0.0:4256"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Gui (server embedded)",
            "cargo": {
                "args": [
                    "build",
                    "--bin=battle_gui",
                    "--package=battle_gui"
                ],
                "filter": {
                    "name": "battle_gui",
                    "kind": "bin"
                }
            },
            "args": [
                "--embedded-server",
                "--server-rep-address",
                "tcp://0.0.0.0:4255",
                "--server-bind-address",
                "tcp://0.0.0.0:4256",
                "--side",
                "a",
                "--side-a-control",
                "W",
                "--side-b-control",
                "SE"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1",
                "RUST_LOG": "DEBUG"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Gui a",
            "cargo": {
                "args": [
                    "build",
                    "--bin=battle_gui",
                    "--package=battle_gui"
                ],
                "filter": {
                    "name": "battle_gui",
                    "kind": "bin"
                }
            },
            "args": [
                "--server-rep-address",
                "tcp://0.0.0.0:4255",
                "--server-bind-address",
                "tcp://0.0.0.0:4256",
                "--side",
                "a"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Gui b",
            "cargo": {
                "args": [
                    "build",
                    "--bin=battle_gui",
                    "--package=battle_gui"
                ],
                "filter": {
                    "name": "battle_gui",
                    "kind": "bin"
                }
            },
            "args": [
                "--server-rep-address",
                "tcp://0.0.0.0:4255",
                "--server-bind-address",
                "tcp://0.0.0.0:4256",
                "--side",
                "b"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Server (release)",
            "cargo": {
                "args": [
                    "build",
                    "--bin=opencombat",
                    "--package=opencombat",
                    "--release"
                ],
                "filter": {
                    "name": "opencombat",
                    "kind": "bin"
                }
            },
            "args": [
                "Server",
                "--server-rep-address",
                "tcp://0.0.0.0:4255",
                "--server-bind-address",
                "tcp://0.0.0.0:4256",
                "--debug",
                "--profile-address",
                "0.0.0.0:8585"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Client",
            "cargo": {
                "args": [
                    "build",
                    "--bin=opencombat",
                    "--package=opencombat",
                    "--release"
                ],
                "filter": {
                    "name": "opencombat",
                    "kind": "bin"
                }
            },
            "args": [
                "Client",
                "--server-rep-address",
                "tcp://127.0.0.1:4255",
                "--server-bind-address",
                "tcp://127.0.0.1:4256",
                "--side",
                "b",
                "--debug",
                "--profile-address",
                "0.0.0.0:8586"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Client (release)",
            "cargo": {
                "args": [
                    "build",
                    "--bin=opencombat",
                    "--package=opencombat"
                ],
                "filter": {
                    "name": "opencombat",
                    "kind": "bin"
                }
            },
            "args": [
                "Client",
                "--server-rep-address",
                "tcp://127.0.0.1:4255",
                "--server-bind-address",
                "tcp://127.0.0.1:4256",
                "--side",
                "b",
                "--profile-address",
                "0.0.0.0:8586"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'opencombat'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=opencombat",
                    "--package=opencombat"
                ],
                "filter": {
                    "name": "opencombat",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
