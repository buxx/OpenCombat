    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Server (standalone)",
            "cargo": {
                "args": [
                    "build",
                    "--bin=battle_server",
                    "--package=battle_server"
                ],
                "filter": {
                    "name": "battle_server",
                    "kind": "bin"
                }
            },
            "args": [
                "--rep-address",
                "tcp://0.0.0.0:4255",
                "--bind-address",
                "tcp://0.0.0.0:4256"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            }
        },
        {
